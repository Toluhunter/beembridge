{
  "name": "beembridge",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/electron/main.js",
  "build": {
    "appId": "com.toluhunter.bb",
    "productName": "beembridge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "scripts": {
    "dev:next": "next dev --turbopack",
    "dev:electron": "tsc -p tsconfig.electron.json && electron dist/main/electron/main.js",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "start": "next start",
    "lint": "next lint",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "pack": "npm run build:next && npm run build:electron && electron-builder --dir",
    "dist": "npm run build:next && npm run build:electron && electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "electron-store": "^8.2.0",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
